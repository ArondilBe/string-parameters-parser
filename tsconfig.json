{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "sourceRoot": "./src",
    "outDir": "./esm",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "incremental": true,
    "esModuleInterop": true,
    "baseUrl": "src/"
  },
  "include": ["src"],
  "exclude": ["node_modules", "esm"]
}
